<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/black"
    app:strokeWidth="1.4dp"
    app:cardUseCompatPadding="true"
    tools:context=".ui.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/helper_view_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/item_background_color3">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="22dp"
            android:ellipsize="end"
            android:fontFamily="@font/graphik_medium"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/helper_view_group"
            app:layout_constraintStart_toStartOf="@id/helper_view_group"
            app:layout_constraintTop_toTopOf="@id/helper_view_group"
            tools:text="Daily's to do" />

        <TextView
            android:id="@+id/txt_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/txt_label_bg"
            android:fontFamily="@font/graphik_regular"
            android:maxWidth="65dp"
            android:paddingStart="7dp"
            android:paddingTop="3dp"
            android:paddingEnd="7dp"
            android:paddingBottom="3dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/helper_view_group"
            app:layout_constraintStart_toStartOf="@id/helper_view_group"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            tools:text="work" />

        <ImageView
            android:id="@+id/ic_date"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/icon_date"
            android:src="@drawable/ic_date"
            app:layout_constraintBottom_toBottomOf="@id/txt_label"
            app:layout_constraintStart_toEndOf="@id/txt_label"
            app:layout_constraintTop_toTopOf="@id/txt_label" />

        <TextView
            android:id="@+id/txt_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6sp"
            android:fontFamily="@font/graphik_regular"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_label"
            app:layout_constraintStart_toEndOf="@id/ic_date"
            app:layout_constraintTop_toTopOf="@id/txt_label"
            tools:text="03/16/2025" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>