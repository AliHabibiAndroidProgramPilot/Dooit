<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.AddTaskActivity">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ic_navigation_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/ic_navigation_back"
            android:src="@drawable/ic_navigation_back" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginEnd="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/icon_save_tick"
            android:src="@drawable/ic_save_tick"
            android:visibility="gone" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            app:toggle_selectAnimation="fade">

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_width="55dp"
                android:layout_height="match_parent"
                app:toggle_backgroundColor="@color/white"
                app:toggle_borderColor="@color/black"
                app:toggle_borderWidth="1.5dp"
                app:toggle_btnCornerRadius="5dp"
                app:toggle_fontFamily="/fonts/graphik_medium.otf"
                app:toggle_selectedBackgroundColor="@color/black"
                app:toggle_selectedText="@string/pinned"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="@string/pin"
                app:toggle_textAlignment="center"
                app:toggle_textColor="@color/black"
                app:toggle_textGravity="center"
                app:toggle_textSize="11sp" />

        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

    </Toolbar>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxStrokeWidth="0dp"
        app:errorEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="AUTOFILL_HINT_NONE"
            android:fontFamily="@font/graphik_semi_bold"
            android:hint="@string/title_hint"
            android:paddingStart="28dp"
            android:paddingEnd="0dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="?attr/colorControlNormal"
            android:textSize="24sp"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>